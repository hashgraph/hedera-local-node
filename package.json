{
  "name": "hedera-local-node",
  "version": "2.15.1",
  "description": "Developer tooling for running Local Hedera Network (Consensus + Mirror Nodes).",
  "main": "index.ts",
  "scripts": {
    "test:readiness": "node --loader ts-node/esm src/utils/testNode.js",
    "test:smoke": "npm --prefix test/smoke run test",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint --fix src/**/*.ts",
    "pretty": "prettier --write 'src/**/*.ts'",
    "precommit": "npm run lint-fix && npm run pretty",
    "prepush": "npm run lint"
  },
  "bin": {
    "hedera": "node --loader ts-node/esm ./src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "github.com:hashgraph/hedera-local-node"
  },
  "keywords": [
    "hedera",
    "hedera-local"
  ],
  "author": "hashgraph",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/yargs": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.0",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@types/pino": "^7.0.5",
    "dotenv": "^16.3.1",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.3",
    "yargs": "^17.7.2"
  }
}
